# Variáveis de Ambiente de Produção - Railway
# Copie estas variáveis para o Railway Dashboard

# Aplicação
NODE_ENV=production
PORT=3000

# Database - MongoDB Atlas
MONGODB_URI=mongodb+srv://oipet-user:password@cluster0.xxxxx.mongodb.net/oipet-saude-prod?retryWrites=true&w=majority

# Redis - Railway Redis Plugin
REDIS_URL=redis://default:password@redis-railway:6379

# JWT Secrets
JWT_SECRET=super-secret-production-key-change-this-immediately
JWT_REFRESH_SECRET=super-secret-refresh-production-key-change-this

# Email - SendGrid
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
FROM_EMAIL=noreply@oipet.com

# File Upload
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=https://oipet-saude.vercel.app,https://oipet-saude-web.vercel.app

# Firebase - Push Notifications
FIREBASE_PROJECT_ID=oipet-saude-prod
FIREBASE_PRIVATE_KEY_ID=xxxxxxxxxxxxxxxxxxxxx
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nxxxxxxxxxxxxxxxxxxxxxxxxxx\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@oipet-saude-prod.iam.gserviceaccount.com

# External APIs
OIPET_ECOMMERCE_API=https://oipetcomidadeverdade.com.br/api
NUTRITION_API_KEY=xxxxxxxxxxxxxxxxxxxxx

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90

# Logs
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Health Check
HEALTH_CHECK_INTERVAL=30000